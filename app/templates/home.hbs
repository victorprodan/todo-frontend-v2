<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<!-- CSS -->

<style>
.background{
  height: 800px;
  background-image: url("https://static.pexels.com/photos/442574/pexels-photo-442574.jpeg");
  background-size: cover;
  top: 0;
}

.banner{
  top: 0px;
}

.banner h1{
  padding-top: 300px;
}

.settings{
  padding-top: 100px;
  padding-bottom: 100px;
}

.line{
  height: 6px;
  background-color: #ecf0f1;
  margin-top: 100px;
}

.task-section{
  padding-top: 100px;
}

.list-block {
  padding-top: 80px;
  padding-left: 15%;
  padding-bottom: 100px;
  margin: auto;
}

.btn-del-user, .btn-ac {
  background-color: trasparent;
  border-color: #000;
  margin-top: 10px;
}

.btn-del-user:hover, {
  background-color: #bdc3c7;
  color: #2c3e50;
  transition: 0.4s;
}

.coppy-r{
  padding-top: 100px;
  padding-bottom: 50px;
}


/*scrollable div*/
.todoTasks, .progressTasks, .donetasks, .userTable, .tasktypeTable{
  max-height: 500px;
  overflow-y: scroll;
  overflow-x: hidden;
  /*flex: 1 0 0;*/
}
/*end scrollable div*/

.table-content{
  margin-top: 20px;
}
</style>

<!-- HEADER -->

<section class="container-fluid banner background text-center" align="center">
  <div class="banner-el">
    <h1>TASK APP</h1>
    {{#paper-button href="#set" id="getstarted" class="btn btn-ac animated fadeIn"}}Start{{/paper-button}}
  </div>
</section>

<!-- TASK LIST SECTION -->
<div id="tasks" class="container task-section">

<div class="col-lg-4 todoTasks layout-align-space-around-center animated fadeInLeft">
{{#each todoTasks as |task|}}
  {{#draggable-object}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}To Do {{paper-icon "error-outline" size=24}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
      {{#card.content class="layout-row layout-align-space-between"}}
        {{#card.media size="md"}}
          {{#paper-list}}
                {{#paper-item class="md-3-line"}}
                  <div class="md-list-item-text">
                    <h3>{{task.description }}</h3>
                    <p>Type: {{task.tasktype.name }}</p>
                    <h4>Assigned to: {{task.user.name }}</h4>
                  </div>
                  {{paper-divider}}
                {{/paper-item}}
                {{#paper-button class="btn btn-ac"}}Update{{/paper-button}}
                {{#paper-button class="btn btn-ac"}}Delete{{/paper-button}}
          {{/paper-list}}
        {{/card.media}}
      {{/card.content}}
  {{/paper-card}}
  {{/draggable-object}}
{{/each}}
</div>


<div class="col-lg-4 layout-align-space-around-center  animated fadeIn">
  {{#draggable-object-target}}
  <div id="drag-container">
  {{#each progressTasks as |task|}}
  {{#draggable-object}}
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}In Progress {{paper-icon "rotate-right" spin=true size=24}}{{/text.headline}}
        {{/title.text}}
      {{/card.title}}
        {{#card.content class="layout-row layout-align-space-between"}}
          {{#card.media size="md"}}
            {{#paper-list}}
                  {{#paper-item class="md-3-line"}}
                    <div class="md-list-item-text">
                      <h3>{{task.description }}</h3>
                      <p>Type: {{task.tasktype.name }}</p>
                      <h4>Assigned to: {{task.user.name }}</h4>
                    </div>
                    {{paper-divider}}
                  {{/paper-item}}
                  {{#paper-button class="btn btn-ac"}}Update{{/paper-button}}
                  {{#paper-button class="btn btn-ac"}}Delete{{/paper-button}}
            {{/paper-list}}
          {{/card.media}}
        {{/card.content}}
    {{/paper-card}}
    {{/draggable-object}}
  {{/each}}
  </div>
  {{/draggable-object-target}}
</div>

<div class="col-lg-4 layout-align-space-around-center  animated fadeInRight">
{{#each doneTasks as |task|}}
{{#draggable-object}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}Done {{paper-icon "check" size=24}}{{/text.headline}}

      {{/title.text}}
    {{/card.title}}
      {{#card.content class="layout-row layout-align-space-between"}}
        {{#card.media size="md"}}
          {{#paper-list}}
                {{#paper-item class="md-3-line"}}
                  <div class="md-list-item-text">
                    <h3>{{task.description }}</h3>
                    <p>Type: {{task.tasktype.name }}</p>
                    <h4>Assigned to: {{task.user.name }}</h4>
                  </div>
                  {{paper-divider}}
                {{/paper-item}}
                {{#paper-button class="btn btn-ac"}}Update{{/paper-button}}
                {{#paper-button class="btn btn-ac"}}Delete{{/paper-button}}
          {{/paper-list}}
        {{/card.media}}
      {{/card.content}}
  {{/paper-card}}
  {{/draggable-object}}
{{/each}}
</div>

</div>
<!-- END TASK LIST SECTION -->

<!-- ADD TASK BUTTON -->
<div class="addTask layout-row layout-align-center">
<button class="btn btn-ac" {{action "toggleModal"}}>Add Task</button>

{{#if isShowingModal}}
    <div class="layout-row layout-align-center">
      {{#modal-dialog onClose="toggleModal"
                      targetAttachment="center"
                      translucentOverlay=true}}

          {{#paper-form as |form|}}
            <div class="layout-column">

              {{form.input label="Description" value=taskDescription onChange=(action (mut taskDescription)) required=true}}

              {{#form.select
                placeholder="Assign to a user"
                selected=selectedUser
                options=users
                onChange=(action (mut selectedUser))
                as |user|}}
                {{user.name}}
              {{/form.select}}

              {{#form.select
                placeholder="Type of Tasks"
                selected=selectedTaskType
                options=tasktypes
                onChange=(action (mut selectedTaskType))
                as |tasktype|}}
                {{tasktype.name}}
              {{/form.select}}

            </div>

            {{#paper-button class="btn btn-ac" align="center" onClick=(action "addTask" taskDescription selectedUser.id selectedTaskType.id)}}Create Task{{/paper-button}}

          {{/paper-form}}
      {{/modal-dialog}}
    </div>
{{/if}}

{{#each tas as |user|}}
{{/each}}

{{#each users as |user|}}
{{/each}}
</div>
<!-- END ADD TASK BUTTON -->

<!-- INTIMIDATING LINE -->
<div class="containter-fluid line"></div>
<!-- END INTIMIDATING LINE -->


<!-- SETTINGS PAGE -->

<section class="container settings layout-align-center" id="set">

  <h1 class="text-center">SETTINGS</h1>

  <div class="col-lg-6 text-center animated fadeInLeft" align="center">
    <div class="layout-row layout-align-center">
      {{paper-input class="flex-30" label="Add a new user" value=userName onChange=(action (mut userName))}}
      {{#paper-button class="btn btn-ac"}}Add User{{/paper-button}}
    </div>
    {{#paper-list class="userTable table-content"}}
    {{#each users as |user|}}
      {{#paper-item class="md-3-line"}}
        <img src="http://simpleicon.com/wp-content/uploads/user1.png" class="md-avatar img-responsive">
        <div class="md-list-item-text">
          <h4>{{user.name}}</h4>
          {{#paper-button class="btn btn-ac" onClick=(action "deleteuser" user.id)}}Delete{{/paper-button}}
        </div>
      {{/paper-item}}
    {{/each}}
    {{/paper-list}}
  </div>

  <div class="col-lg-6 text-center animated fadeInRight" align="center">
    <div class="layout-row layout-align-center">
      {{paper-input class="flex-30" label="Add a new task type" value=taskTypeName onChange=(action (mut taskTypeName))}}
      {{#paper-button class="btn btn-ac"}}Add Task Type{{/paper-button}}
    </div>
    {{#paper-list class="tasktypeTable table-content"}}
    {{#each tasktypes as |tasktype|}}
      {{#paper-item class="md-3-line"}}
        <img src="http://icons.iconarchive.com/icons/icons8/windows-8/512/Very-Basic-Settings-icon.png" class="md-avatar img-responsive">
        <div class="md-list-item-text">
          <h4>{{tasktype.name}}</h4>
          {{#paper-button class="btn btn-ac" onClick=(action "deletetasktype" tasktype.id)}}Delete{{/paper-button}}
        </div>
      {{/paper-item}}
    {{/each}}
    {{/paper-list}}
  </div>
</section>

<section class="container footer layout-row layout-align-center">
{{#paper-button id="bottom" class="btn btn-ac layout-row layout-align-center"}}View Tasks{{/paper-button}}
</section>

<!-- INTIMIDATING LINE -->
<div class="containter-fluid line"></div>
<!-- END INTIMIDATING LINE -->
<div class="coppy-r layout-row layout-align-center">
  <small>&copy; Internship 2017 @ Luminos Software</small>
</div>

<script>
$(document).ready(function() {
$("#bottom").click(function() {
     $('html, body').animate({
         scrollTop: $("#tasks").offset().top
     }, 1500);
 });
});

$(document).ready(function() {
$("#getstarted").click(function() {
     $('html, body').animate({
         scrollTop: $("#set").offset().top
     }, 1500);
 });
});

$(document).ready(function() {
  $(window).scroll(function(e){
    scrollEffect();
  });
function scrollEffect(){
  var scr = $(window).scrollTop();
	$('.banner').css('top',(0-(scrolled*0.25))+'px');
}
})

</script>
