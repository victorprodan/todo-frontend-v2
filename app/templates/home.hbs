<!-- Bootstrap & Animate.css cdn -->
<link href="https://fastcdn.org/Animate.css/3.4.0/animate.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

<!-- HEADER -->

<section class="container-fluid banner background text-center" align="center">
  <div class="banner-el">
    <img src="http://franciscomonaco.com/wp-content/themes/theshredderawakens/img/logo-black.png" class="img-responsive banner-img">
    <h1>TASK APP</h1>
    {{#paper-button href="#set" id="getstarted" class="btn btn-ac animated fadeIn"}}Settings{{/paper-button}}
    {{#paper-button href="#tasks" id="show" class="btn btn-ac animated fadeIn"}}View Tasks{{/paper-button}}
  </div>
</section>

<!-- TASK LIST SECTION -->
<div id="tasks" class="container task-section">

<div class="col-lg-4 todoTasks layout-align-space-around-center animated fadeInLeft" id="custom">
{{#each todoTasks as |task|}}
  {{#draggable-object content=task}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}To Do {{paper-icon "error-outline" size=24}}{{/text.headline}}
      {{/title.text}}
    {{/card.title}}
      {{#card.content class="layout-row layout-align-space-between"}}
        {{#card.media size="md"}}
          {{#paper-list}}
                {{#paper-item class="md-3-line"}}
                  <div class="md-list-item-text">
                    <h3>{{task.description }}</h3>
                    <p>Type: {{task.tasktype.name}}</p>
                    <h4>Assigned to: {{task.user.name}}</h4>
                  </div>
                  {{paper-divider}}
                {{/paper-item}}
          {{/paper-list}}
        {{/card.media}}
      {{/card.content}}
  {{/paper-card}}
  {{/draggable-object}}
{{/each}}
</div>

<div class="col-lg-4 progressTasks layout-align-space-around-center animated fadeIn" id="custom">
  {{#draggable-object-target action="updateStatus" status="progress"}}

  {{#each progressTasks as |task|}}
    {{#draggable-object content=task}}
    {{#paper-card as |card|}}
      {{#card.title as |title|}}
        {{#title.text as |text|}}
          {{#text.headline}}In Progress {{paper-icon "rotate-right" spin=true size=24}}{{/text.headline}}
        {{/title.text}}
      {{/card.title}}
        {{#card.content class="layout-row layout-align-space-between"}}
          {{#card.media size="md"}}

            {{#paper-list}}
                  {{#paper-item class="md-3-line"}}
                    <div class="md-list-item-text">
                      <h3>{{task.description }}</h3>
                      <p>Type: {{task.tasktype.name }}</p>
                      <h4>Assigned to: {{task.user.name }}</h4>
                    </div>
                    {{paper-divider}}
                  {{/paper-item}}
                  {{/paper-list}}
          {{/card.media}}
        {{/card.content}}
    {{/paper-card}}
    {{/draggable-object}}
  {{/each}}
{{/draggable-object-target}}
</div>


<div class="col-lg-4 doneTasks layout-align-space-around-center animated fadeInRight" id="custom">
{{#draggable-object-target action="updateStatus" status="done"}}
{{#each doneTasks as |task|}}
  {{#paper-card as |card|}}
    {{#card.title as |title|}}
      {{#title.text as |text|}}
        {{#text.headline}}Done {{paper-icon "check" size=24}}{{/text.headline}}

      {{/title.text}}
    {{/card.title}}
      {{#card.content class="layout-row layout-align-space-between"}}
        {{#card.media size="md"}}
          {{#paper-list}}
                {{#paper-item class="md-3-line"}}
                  <div class="md-list-item-text">
                    <h3>{{task.description }}</h3>
                    <p>Type: {{task.tasktype.name }}</p>
                    <h4>Assigned to: {{task.user.name }}</h4>
                  </div>
                  {{paper-divider}}
                {{/paper-item}}
                {{/paper-list}}
        {{/card.media}}
      {{/card.content}}
  {{/paper-card}}
{{/each}}
{{/draggable-object-target}}
</div>


</div>
<!-- END TASK LIST SECTION -->

<!-- ADD TASK BUTTON -->

<div class="addTask layout-row layout-align-center">
{{#paper-button onClick=(action "toggleModal") class="add-task-btn"}}Add Task{{/paper-button}}

{{#if isShowingModal}}
    <div class="layout-row layout-align-center">
      {{#modal-dialog onClose="toggleModal"
                      targetAttachment="center"
                      translucentOverlay=true}}

          {{#paper-form as |form|}}
            <div class="layout-column">

              {{form.input label="Description" value=taskDescription onChange=(action (mut taskDescription)) required=true}}

              {{#form.select
                placeholder="Assign to a user"
                selected=selectedUser
                options=users
                onChange=(action (mut selectedUser))
                as |user|}}
                {{user.name}}
              {{/form.select}}

              {{#form.select
                placeholder="Type of Tasks"
                selected=selectedTaskType
                options=tasktypes
                onChange=(action (mut selectedTaskType))
                as |tasktype|}}
                {{tasktype.name}}
              {{/form.select}}

            </div>

            {{#paper-button class="btn-ac" align="center" onClick=(action "addTask" taskDescription selectedUser.id selectedTaskType.id)}}Create Task{{/paper-button}}
            {{#paper-button class="btn-ac" onClick=(action "toggleModal")}}Cancel{{/paper-button}}

          {{/paper-form}}
      {{/modal-dialog}}
    </div>
{{/if}}

{{#each tas as |user|}}
{{/each}}

{{#each users as |user|}}
{{/each}}
</div>
<!-- END ADD TASK BUTTON -->

<!-- INTIMIDATING LINE -->
<div class="containter-fluid line"></div>
<!-- END INTIMIDATING LINE -->


<!-- SETTINGS PAGE -->

<section class="container settings layout-align-center" id="set">

  <h1 class="text-center set-title">SETTINGS</h1>

  <div class="col-lg-6 text-center animated fadeInLeft" align="center">
    <div class="layout-row layout-align-center">
      {{paper-input class="flex-30" label="Add a new user" value=userName onChange=(action (mut userName))}}
      {{#paper-button class="btn btn-ac" onClick=(action "addUser" userName)}}Add User{{/paper-button}}
    </div>
    {{#paper-list class="userTable table-content" id="scroll"}}
    {{#each users as |user|}}
      {{#paper-item class="md-3-line items"}}
        <img src="http://simpleicon.com/wp-content/uploads/user1.png" class="md-avatar img-responsive">
        <div class="md-list-item-text">
          <h4>{{user.name}}</h4>
          {{#paper-button class="btn-ac-space-two btn-ac" onClick=(action "deleteuser" user.id)}}Delete{{/paper-button}}
        </div>
      {{/paper-item}}
    {{/each}}
    {{/paper-list}}
  </div>

  <div class="col-lg-6 text-center animated fadeInRight" align="center">
    <div class="layout-row layout-align-center">
      {{paper-input class="flex-30" label="Add a new task type" value=taskTypeName onChange=(action (mut taskTypeName))}}
      {{#paper-button class="btn btn-ac" onClick=(action "addTaskType" taskTypeName)}}Add Task Type{{/paper-button}}
    </div>
    {{#paper-list class="tasktypeTable table-content" id="scroll"}}
    {{#each tasktypes as |tasktype|}}
      {{#paper-item class="md-3-line items"}}
        <img src="http://icons.iconarchive.com/icons/icons8/windows-8/512/Very-Basic-Settings-icon.png" class="md-avatar img-responsive">
        <div class="md-list-item-text">
          <h4>{{tasktype.name}}</h4>
          {{#paper-button class="btn-ac-space-two btn-ac" onClick=(action "deletetasktype" tasktype.id)}}Delete{{/paper-button}}
        </div>
      {{/paper-item}}
    {{/each}}
    {{/paper-list}}
  </div>
</section>

<section class="container footer layout-row layout-align-center">
{{#paper-button id="bottom" class="btn btn-ac layout-row layout-align-center"}}Go Up{{/paper-button}}
</section>

<!-- INTIMIDATING LINE -->
<div class="containter-fluid line"></div>
<!-- END INTIMIDATING LINE -->
<div class="coppy-r layout-row layout-align-center">
  <small>&copy; Internship 2017 @ Luminos Software</small>
</div>

<script>
$(document).ready(function() {
$("#bottom").click(function() {
     $('html, body').animate({
         scrollTop: $("#tasks").offset().top
     }, 1500);
 });
});

$(document).ready(function() {
$("#getstarted").click(function() {
     $('html, body').animate({
         scrollTop: $("#set").offset().top
     }, 1500);
 });
});

$(document).ready(function() {
$("#show").click(function() {
     $('html, body').animate({
         scrollTop: $("#tasks").offset().top
     }, 1500);
 });
});



</script>
